<div class="wrapper">
    <h2>User Sign-up</h2>
    <section class="form-section">
        <form action="/auth/signup" method="POST">
            {{#if errorMessage}}
                <p class="error-message">{{errorMessage}}</p>
            {{/if}}
            <label class="form-label" for="email">Email: </label>
            <div>
                <input 
                    class="form-field" 
                    id="email" 
                    placeholder="email" 
                    type="text" 
                    required="required"
                    name="email"
                />
            </div>

            <label class="form-label" for="password"> password: </label>
            <div>
                <input
                    class="form-field" 
                    id="password" 
                    placeholder="password" 
                    type="password"
                    name="password"
                />
            </div>

            <div>
                <button class="pet-form-button" type="submit">Login</button>
            </div>
        </form>
    </section>
</div>